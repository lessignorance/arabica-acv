<body class="{{body_class}}">
	<header class="main-header">
		<div class="main-header-content">
			<h1 class="blog-title"><a href="{{@blog.url}}">{{@blog.title}}</a></h1>
			<h2 class="blog-description">{{@blog.description}}</h2>
		</div>
	</header>

    {{! Everything else gets inserted here }}
    {{{body}}}

    <footer class="site-footer">
    	<section class="rss"><a class="subscribe-button icon-feed" href="{{@blog.url}}/rss/"></a></section>
		{{#if @blog.twitter}}<section class="twitter"><a class="icon-twitter" href="{{twitter_url}}"> {{@blog.twitter}}</a></section>{{/if}}
		{{#if @blog.facebook}}<section class="facebook"><a class="icon-facebook" href="{{facebook_url}}"> {{@blog.facebook}}</a></section>{{/if}}
        <section class="navigation">{{navigation}}</section>
        <!-- <section class="poweredby"><a href="http://thedarkroast.com/arabica">Arabica</a> theme by Sean Lunsford. Published with <a href="https://ghost.org">Ghost</a>.</section> -->
